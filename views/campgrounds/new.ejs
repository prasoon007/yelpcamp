<% include ../partials/header %>

<div class="container">	
	<form action="/campgrounds" method="POST">
	<div class="row" style="width: 30%; margin: 25px auto">
				<h4 style="text-align: center">ADD A NEW CAMPGROUND</h4>
				<div class="form-group"><input class="form-control" type="text" name="name" placeholder="NAME"></div>
				<div class="form-group"><input class="form-control" type="number" name="price" min="0.1" step="0.1" placeholder="PRICE"></div>
				<div class="form-group"><input class="form-control" type="text" name="image" placeholder="IMAGE"></div>
				<div class="form-group"><input class="form-control" type="text" name="description" placeholder="DESCRIPTION"></div>
				<div class="form-group"><button class="btn btn-lg btn-primary 
				btn-block">ADD CAMPGROUNDS</button></div>
			</form>
			<a href="/campgrounds">GO BACK</a>
		</div>
	</div>	
</div>

<% include ../partials/footer %>