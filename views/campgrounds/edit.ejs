<% include ../partials/header %>

<div class="container">	
	<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
	<div class="row" style="width: 30%; margin: 25px auto">
				<h4 style="text-align: center">EDIT THE CAMPGROUND</h4>
				<div class="form-group"><input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>"></div>
				<div class="form-group"><input class="form-control" type="text" name="camp[price]" value="<%= camp.price %>"></div>
				<div class="form-group"><input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>"></div>
				<div class="form-group"><input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>"></div>
				<div class="form-group"><button class="btn btn-lg btn-primary 
				btn-block">EDIT CAMPGROUNDS</button></div>
			</form>
			<a href="/campgrounds">GO BACK</a>
		</div>
	</div>	
</div>

<% include ../partials/footer %>